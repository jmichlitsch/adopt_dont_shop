<%= form_tag path, method: method do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, value: name %><br>
  <%= label_tag :address %>
  <%= text_field_tag :address, value: address %><br>
  <%= label_tag :city %>
  <%= text_field_tag :city, value: city %><br>
  <%= label_tag :state %>
  <%= text_field_tag :state, value: state %><br>
  <%= label_tag :zip %>
  <%= text_field_tag :zip, value: zip %><br>
  <%= submit_tag button_text %>
<% end %>
